{% extends '@App/Layout/layout.html.twig' %}

{% block breadcrumbs %}
    <li>Publish</li>
    <li>Record</li>
    <li class="active">{{ form.vars.value.id ? 'Edit' : 'New' }}</li>
{% endblock %}

{% block form %}

    <div class="form-group {{ (form.name.vars.errors|length ? 'has-error' : '') }}">
        {{ form_label(form.name, 'Name', {'label_attr': {'class': 'control-label col-lg-2'}}) }}
        <div class="col-lg-10">
            {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Community' }}) }}
            {{ form_errors(form.name) }}
        </div>
    </div>

    <div class="form-group {{ (form.city.vars.errors|length ? 'has-error' : '') }}">
        {{ form_label(form.city, 'City', {'label_attr': {'class': 'control-label col-lg-2'}}) }}
        <div class="col-lg-10">
            {{ form_widget(form.city, {'attr': {'class': 'form-control' }}) }}
            {{ form_errors(form.city) }}
        </div>
    </div>

    <div class="form-group {{ (form.user.vars.errors|length ? 'has-error' : '') }}">
        {{ form_label(form.user, 'User', {'label_attr': {'class': 'control-label col-lg-2'}}) }}
        <div class="col-lg-10">
            {{ form_widget(form.user, {'attr': {'class': 'form-control', 'placeholder': '123456' }}) }}
            {{ form_errors(form.user) }}
        </div>
    </div>

    <div class="form-group {{ (form.group_id.vars.errors|length ? 'has-error' : '') }}">
        {{ form_label(form.group_id, 'Group id', {'label_attr': {'class': 'control-label col-lg-2'}}) }}
        <div class="col-lg-10">
            {{ form_widget(form.group_id, {'attr': {'class': 'form-control', 'placeholder': '123456' }}) }}
            {{ form_errors(form.group_id) }}
        </div>
    </div>

    <div class="form-group {{ (form.link.vars.errors|length ? 'has-error' : '') }}">
        {{ form_label(form.link, 'Link', {'label_attr': {'class': 'control-label col-lg-2'}}) }}
        <div class="col-lg-10">
            {{ form_widget(form.link, {'attr': {'class': 'form-control', 'placeholder': 'http://community.com' }}) }}
            {{ form_errors(form.link) }}
        </div>
    </div>

    <div class="form-group {{ (form.active.vars.errors|length ? 'has-error' : '') }}">
        {{ form_label(form.link, 'Active', {'label_attr': {'class': 'control-label col-lg-2'}}) }}
        <div class="col-lg-10">
            {{ form_widget(form.active, {'attr': {'class': 'form-control' }}) }}
            {{ form_errors(form.active) }}
        </div>
    </div>

    <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
            <button type="reset" class="btn btn-default">Cancel</button>
            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary' }, 'label': 'Submit'}) }}
        </div>
    </div>

{% endblock %}
