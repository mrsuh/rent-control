{% extends '@App/Layout/layout.html.twig' %}

{% block breadcrumbs %}
    <li>Publish</li>
    <li class="active">Record</li>
{% endblock %}

{% block content %}

    <a href="{{ path('app_view_publish_record_record_create') }}" class="btn btn-primary">New</a>
    <br>
    <br>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>city</th>
            <th>link</th>
            <th>user</th>
            <th>active</th>
        </tr>
        </thead>
        <tbody>
        {% for l in list %}
            <tr>
                <td><a href="{{ path('app_view_publish_record_record_edit', {'record_id': l.id }) }}">{{ l.city }}</a></td>
                <td><a href="{{ l.link }}" target="_blank">{{ l.link }}</a></td>
                <td>{{ l.user }}</td>
                <td>{{ l.active ? '+' : '' }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
