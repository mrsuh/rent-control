{% extends '@App/Layout/layout.html.twig' %}

{% block breadcrumbs %}
    <li>Black list</li>
    <li><a href="{{ path('app_view_blacklist_person_list') }}">Person</a></li>
    <li class="active">New</li>
{% endblock %}

{% block form %}

    <div class="form-group {{ (form.id.vars.errors|length ? 'has-error' : '') }}">
        {{ form_label(form.id, 'Id', {'label_attr': {'class': 'control-label col-lg-2'}}) }}
        <div class="col-lg-10">
            {{ form_widget(form.id, {'attr': {'class': 'form-control', 'placeholder': '123456' }}) }}
            {{ form_errors(form.id) }}
        </div>
    </div>

    <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
            <button type="reset" class="btn btn-default">Cancel</button>
            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary' }, 'label': 'Submit'}) }}
        </div>
    </div>

{% endblock %}
